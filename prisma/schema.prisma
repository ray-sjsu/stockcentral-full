generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserInfo {
  userId         Int             @id @unique(map: "sqlite_autoindex_UserInfo_1") @default(autoincrement())
  username       String          @unique(map: "sqlite_autoindex_UserInfo_2")
  password       String
  isLoggedin     Int?
  lastLoggedin   String?
  lastAccess     String?
  lastSearch     String?
  UserPreference UserPreference?
}

model UserPreference {
  userAccount   Int      @unique(map: "sqlite_autoindex_UserPreference_1")
  selectedStock String?
  searchHistory String?
  favoriteList  String?
  UserInfo      UserInfo @relation(fields: [userAccount], references: [userId], onDelete: NoAction, onUpdate: NoAction)
}
